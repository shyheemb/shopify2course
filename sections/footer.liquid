{{ 'Footer.css' | asset_url | stylesheet_tag }}

<footer class="footer">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="row">
          <div class="col-md-3">
          <div class="footer__logo">
            <a href="{{ routes.root_url }}">
              {%- if settings.logo != blank -%}
                {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
                {%- assign logo_height = settings.logo_width | divided_by: settings.logo.aspect_ratio -%}
                {{ settings.logo | image_url: width: 500 | image_tag:
                  class: 'header__heading-logo motion-reduce',
                  widths: '50, 100, 150, 200, 250, 300, 400, 500',
                  height: logo_height,
                  width: settings.logo_width,
                  alt: logo_alt
                }}
              {%- else -%}
                {{ shop.name }}
              {%- endif -%}
            </a>
        </div>
    </div>
          {%- for block in section.blocks -%}
          <div class="col-md-2">
            <div class="footer__links">
              
              <span class="footer__column-title">{{block.settings.heading}}</span>
           
              {%- for link in block.settings.menu.links -%}
              <a href="{{ link.url }}"
               class="footer__link">{{ link.title }}
              </a>
            {%- endfor -%}
              </div>
          </div>
          {%- endfor -%}
        </div>
      </div>
      <div class="col-md-3">
        <div class="footer__extra">
          {% if section.settings.newsletter_enable != false %}
          <span class="footer__column-title"> {{ section.settings.newsletter_heading }}</span>

            {%- form 'customer' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="newsletter-form__field-wrapper">
              <div class="field">
                <input
                  type="email"
                  name="contact[email]"
                  class="footer__input"
                  value="{{ form.email }}"
                  aria-required="true"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  {% if form.errors %}
                    autofocus
                    aria-invalid="true"
                    aria-describedby="ContactFooter-error"
                  {% elsif form.posted_successfully? %}
                    aria-describedby="ContactFooter-success"
                  {% endif %}
                  placeholder="youremail@company.com"
                  required
                  style = "width: 100%;"
                >
               
              </div> 
              <button type="submit"  name="commit" style="width: 100%; font-size: 1rem; 
                padding: 10px 40px; text-align: center; margin-bottom: 1rem;"  aria-label="{{ 'newsletter.button_label' | t }}">
                 Subscribe {% render 'icon-arrow' %}
                </button>
              {%- if form.errors -%}
                <small class="newsletter-form__message form__message" id="ContactFooter-error">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</small>
              {%- endif -%}
            </div>
            {%- if form.posted_successfully? -%}
              <h3 style="color: green; font-size: .9rem; text-align: center;">{{ 'newsletter.success' | t }}</h3>
            {%- endif -%}
          {%- endform -%}
        {%- endif -%}
          <p>
            {{ section.settings.footer_p  }}
          </p>
          {% if section.settings.show_social != false %}
          <div class="footer__social-icons">

            {% if settings.social_facebook_link != blank %}
            <a href="{{ settings.social_facebook_link }}" class="footer__social-link"><i
                class="fa-brands fa-facebook-f"></i>
              </a>
              {% endif %}
              {%if settings.social_tiktok_link != blank%}
                <a href="{{ settings.social_tiktok_link }}" class="footer__social-link"><i
                class="fa-brands fa-tiktok"></i>
              </a>
            {% endif %}
              
                      {%if settings.social_google_link != blank%}
                      
                        <a class="footer__social-link" href="{{ settings.social_google_link }}" target="_blank">
                            <i class="fa-brands fa-google" aria-hidden="true"></i>
                        </a> 
                    
                        {% endif %}
                  
                    {%if settings.social_instagram_link != blank%}
                    
                        <a  class="footer__social-link" href="{{ settings.social_instagram_link }}" target="_blank">
                            <i class="fa-brands fa-instagram" aria-hidden="true"></i>
                        </a>
                  
                    {% endif %}
                   
                      {%if settings.social_twitter_link != blank%} 
                     
                        <a  class="footer__social-link" href="{{ settings.social_twitter_link }}" target="_blank">
                            <i class="fa-brands fa-twitter" aria-hidden="true"></i>
                        </a>
                     
                        {% endif %}
                    
                   
                      {%if settings.social_youtube_link != blank%} 
                   
                        <a  class="footer__social-link" href="{{ settings.social_youtube_link }}" target="_blank">
                            <i class="fa-brands fa-youtube" aria-hidden="true"></i>
                        </a>     
                 
                        {% endif %}
               
                   
                      {%if settings.social_pinterest_link != blank%} 
                      
                        <a  class="footer__social-link" href="{{ settings.social_pinterest_link }}" target="_blank">
                            <i class="fa-brands fa-pinterest" aria-hidden="true"></i>
                        </a> 
                      
                        {% endif %}
                   
                    
                      {%if settings.social_tumblr_link != blank%}
                     
                        <a  class="footer__social-link" href="{{ settings.social_tumblr_link }}" target="_blank">
                            <i class="fa-brands fa-tumblr" aria-hidden="true"></i>
                        </a>
                        
                        {% endif %}
                    
                   
                      {%if settings.social_snapchat_link != blank%}
                       
                        <a  class="footer__social-link" href="{{ settings.snapchat_pinterest_link }}" target="_blank">
                            <i class="fa-brands fa-snapchat" aria-hidden="true"></i>
                        </a>
                        
                        {% endif %}
                    
                   
                      {%if settings.social_vimeo_link != blank%}
                      
                        <a  class="footer__social-link" href="{{ settings.social_vimeo_link }}" target="_blank">
                            <i class="fa-brands fa-vimeo" aria-hidden="true"></i>
                        </a>  
                     
                    {% endif %}
                
              </div>
        </div>
        {% endif %}
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="footer__bottom">
          <div class="footer__copyright" style="color: white;"> 
          &copy; {{ 'now' | date: "%Y" }}, {{ shop.name }} LLC ALL Rights Reserved</div>
          <div class="footer__extra-links">
            {%- for link in section.settings.footer_bottom_menu.links -%}
              <a href="{{ link.url }}">{{ link.title }}</a>
            {%- endfor -%}
           
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

{%- style -%}
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


{% schema %}
{
  "name": "t:sections.footer.name",
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "link_list",
      "name": "t:sections.footer.blocks.link_list.name",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Get Help",
          "label": "t:sections.footer.blocks.link_list.settings.heading.label"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "t:sections.footer.blocks.link_list.settings.menu.label",
          "info": "t:sections.footer.blocks.link_list.settings.menu.info"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "header",
      "content": "t:sections.footer.settings.header__1.content",
      "info": "t:sections.footer.settings.header__1.info"
    },
    {
      "type": "checkbox",
      "id": "newsletter_enable",
      "default": true,
      "label": "t:sections.footer.settings.newsletter_enable.label"
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "default": "Sign Up For Newsletter",
      "label": "t:sections.footer.settings.newsletter_heading.label"
    },
    {
      "type": "textarea",
      "id": "footer_p",
      "label": "Extra Info",
      "default": "Welcome to my shop!"
    },
    {
      "type": "header",
      "content": "t:sections.footer.settings.header__2.content",
      "info": "t:sections.footer.settings.header__2.info"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "default": true,
      "label": "t:sections.footer.settings.show_social.label"
    },
    {

      "type": "link_list",
    
      "id": "footer_bottom_menu",
    
      "label": "Bottom Menu"
    
    },
    {
      "type": "header",
      "content": "t:sections.all.spacing"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.footer.settings.margin_top.label",
      "default": 0
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "link_list"
      }
    ]
  }
}
{% endschema %}
